



<div class = "panel-thread">
   <div class = "<%= get_point_style(point2) %>" >
       
         <div class = "panel panel-heading"><%= User.find(point2.user_id).name %></div>
         <div class = "panel-body">
            <%= point2.body %>
            <%= point2.id %>
         </div>
         
         
            <button class="btn btn-primary-outline" data-toggle = "collapse"  data-target = <%="#collapse#{point2.id}"%>>
              Show Children
            </button>
            <% if side != point2.side %>
            
            <button class="btn btn-primary-outline" data-toggle = "collapse"  data-target =<%="#collapseform#{point2.id}"%>>
              Rebuddle
            </button>
            
            <% end %>
            
            <div id =<%="collapseform#{point2.id}"%> class = "panel-collapse collapse" >
              
           <%= form_tag(controller: "points", action: "create", method: "post", class: "form-inline") do %>
              <%= hidden_field_tag(:parent_id, :parent_id, value: point2.id) %>
              <%= text_area_tag  "body", nil, class: "form-control" %>
              <%= text_field_tag "side", nil, class: "form-control" %>
              <%= number_field_tag "votes", nil, class: "form-control" %>
             
                  <%= submit_tag "Submit", name: nil, class: "btn btn-success green" %>
              
            <% end %>
            </div>
      </div>
       <div id = <%="collapse#{point2.id}"%> class = "panel-collapse collapse in" >
           
           
           
           
              <%= render partial: 'points/point2', collection: point2.points.order(:votes), locals: {side: side}  %>
            
             
            </div>
       </div>   
       
      

